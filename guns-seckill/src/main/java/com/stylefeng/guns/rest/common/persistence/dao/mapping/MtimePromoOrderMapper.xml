<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.rest.common.persistence.dao.MtimePromoOrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.rest.common.persistence.model.MtimePromoOrder">
        <id column="uuid" property="uuid" />
        <result column="user_id" property="userId" />
        <result column="cinema_id" property="cinemaId" />
        <result column="exchange_code" property="exchangeCode" />
        <result column="amount" property="amount" />
        <result column="price" property="price" />
        <result column="start_time" property="startTime" />
        <result column="create_time" property="createTime" />
        <result column="end_time" property="endTime" />
    </resultMap>
    <insert id="insertByUserIdAndAmount">
    insert into mtime_promo_order(user_id,cinema_id,exchange_code,amount,price,start_time,create_time,end_time)
    values(#{order.userId},#{order.cinemaId},#{order.exchangeCode},#{order.amount},#{order.price},#{order.startTime},#{order.createTime},#{order.endTime});
    </insert>

</mapper>
