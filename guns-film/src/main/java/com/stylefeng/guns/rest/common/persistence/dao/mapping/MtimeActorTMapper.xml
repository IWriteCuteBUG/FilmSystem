<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.rest.common.persistence.dao.MtimeActorTMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.rest.common.persistence.model.MtimeActorT">
        <id column="UUID" property="uuid" />
        <result column="actor_name" property="actorName" />
        <result column="actor_img" property="actorImg" />
    </resultMap>

    <select id="selectActors" resultType="com.stylefeng.guns.rest.vo.cly.clyresvo.ClyActorVo">
        select actor_name as directorName,actor_img as imgAddress,role_name as roleName from
        mtime_film_actor_t f left join mtime_actor_t a on f.actor_id=a.UUID
        where f.film_id=#{filmId}
    </select>

</mapper>
